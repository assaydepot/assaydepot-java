      <name>MIT License</name>
      <url>http://www.opensource.org/licenses/mit-license.php</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git@github.com:assaydepot/assaydepot-java.git</connection>
    <developerConnection>scm:git:git@github.com:assaydepot/assaydepot-java.git</developerConnection>
