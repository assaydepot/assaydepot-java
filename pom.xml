  <artifactId>assaydepot-java</artifactId>
  <version>0.20</version>
  <packaging>jar</packaging>

  <name>assaydepot-java</name>
  <url>http://assaydepot.com/api</url>

  <parent>
    <groupId>org.sonatype.oss</groupId>
